# Algorithmic Trading System - Environment Variables Template
# =============================================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control!

# Alpaca Trading API (https://alpaca.markets/)
# Free tier available for paper trading
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading URL
# For live trading, use: https://api.alpaca.markets

# Interactive Brokers API
# Requires TWS or IB Gateway running locally
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 for paper trading, 7496 for live trading
IB_CLIENT_ID=1
IB_ACCOUNT_ID=your_ib_account_id_here

# TD Ameritrade API (https://developer.tdameritrade.com/)
TD_CONSUMER_KEY=your_td_consumer_key_here
TD_REFRESH_TOKEN=your_td_refresh_token_here
TD_ACCOUNT_ID=your_td_account_id_here

# Polygon.io Market Data (https://polygon.io/)
# Real-time and historical market data
POLYGON_API_KEY=your_polygon_api_key_here

# Alpha Vantage API (https://www.alphavantage.co/)
# Free tier: 5 API requests per minute, 500 per day
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key_here

# Quandl API (https://www.quandl.com/)
# Historical financial data
QUANDL_API_KEY=your_quandl_api_key_here

# CBOE LiveVol (https://www.cboe.com/)
# Options market data (requires subscription)
CBOE_USERNAME=your_cboe_username_here
CBOE_PASSWORD=your_cboe_password_here

# Tradier API (https://developer.tradier.com/)
# Options and stock market data + trading
TRADIER_API_KEY=your_tradier_api_key_here
TRADIER_ACCOUNT_ID=your_tradier_account_id_here
# Use sandbox for testing: https://sandbox.tradier.com/v1
# For live trading: https://api.tradier.com/v1
TRADIER_BASE_URL=https://sandbox.tradier.com/v1

# Database Configuration (optional)
# For storing trade history and market data
DATABASE_URL=postgresql://username:password@localhost:5432/trading_db
# Or for SQLite: sqlite:///trading_system.db

# Redis Configuration (optional)
# For caching market data and session management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Email Notifications (optional)
# For trade alerts and system notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password_here
NOTIFICATION_EMAIL=alerts@yourdomain.com

# Slack Notifications (optional)
# Webhook URL for sending trading alerts to Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# System Configuration
ENVIRONMENT=development  # development, staging, production
DEBUG_MODE=true  # Set to false in production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
# Generate a strong secret key for any authentication/encryption needs
SECRET_KEY=your_very_long_random_secret_key_here_min_32_chars
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"

# Risk Management Overrides (optional)
# Uncomment to override config.yaml settings
# MAX_POSITION_SIZE=1000
# MAX_PORTFOLIO_DELTA=500
# STOP_LOSS_PCT=0.05
